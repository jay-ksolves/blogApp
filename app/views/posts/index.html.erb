  <p style="color: green"><%= notice %></p>
  <hr>

<h1 class="intro">Post List</h1>
<hr>

<div class="container">
<div class="card">
<div id="posts" >

  <% @posts.each do |post| %>
 
    <%= render post %>
   
    <p>
    <button class="btn btn-outline-warning btn-lg d-grid gap-4 col-8 mx-auto">   <%= link_to "Show this post", post %>
    </button></p>
    
  <% end %>
</div>

<br>
