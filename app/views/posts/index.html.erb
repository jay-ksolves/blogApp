    .card {
      padding: 20px;
      /* width: auto; */
      /* height: auto */
      align-items: center;
      text-align: center;
      justify-content: center;
   width:80rem;
      display:flex;
    }
    

    @keyframes gradient {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
    </style>


